<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <View
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:background="#7ecacaca"
        android:minHeight="62dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingBottom="@dimen/dimen_space_8dp"
        android:paddingRight="@dimen/dimen_space_16dp"
        android:paddingTop="@dimen/dimen_space_8dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/panel_content"
            android:layout_marginLeft="24dp"
            android:background="@drawable/round_shape_orange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_space_24dp"
                android:text="Tanggal"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_space_24dp"
                android:layout_marginRight="@dimen/dimen_space_16dp"
                android:text="Status"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>