<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/panel_tugas_selesai"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/panel_selesai_dengan_penyidikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_space_16dp"
            android:fontFamily="sans-serif-light"
            android:text="Tanggal Penyelidikan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/ed_date_penyelidikan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f7f6f6"
                android:hint="yyyy-dd-mm"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingLeft="@dimen/dimen_space_16dp"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/action_date_penyelidikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_space_16dp"
                android:layout_marginLeft="@dimen/dimen_space_16dp"
                android:layout_marginTop="@dimen/dimen_space_16dp"
                android:background="@drawable/button_round_orange"
                android:onClick="openDatePickerDialog"
                android:src="@drawable/ic_date"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_space_16dp"
            android:fontFamily="sans-serif-light"
            android:text="Tanggal Penyidikan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/ed_date_penyidikan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f7f6f6"
                android:hint="yyyy-dd-mm"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingLeft="@dimen/dimen_space_16dp"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/action_date_penyidikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_space_16dp"
                android:layout_marginLeft="@dimen/dimen_space_16dp"
                android:layout_marginTop="@dimen/dimen_space_16dp"
                android:background="@drawable/button_round_orange"
                android:onClick="openDatePickerDialog"
                android:src="@drawable/ic_date"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:fontFamily="sans-serif-light"
        android:text="Klik button dibawah ini, jika tugas selesai dilaksanakan"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/btn_versa_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_space_12dp"
        android:background="@drawable/button_square_orange"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_space_12dp"
        android:paddingTop="@dimen/dimen_space_12dp"
        android:text="Tugas Selesai"
        android:textColor="@android:color/primary_text_dark"/>

    <TextView
        android:id="@+id/txt_message_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_space_16dp"
        android:text="Tugas Selesai dilaksanakan !"
        android:textAlignment="center"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:background="#DBE1E8"/>
</LinearLayout>