<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_kejadian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_space_16dp"
            android:fontFamily="sans-serif-light"
            android:text="Apakah jenis keadaan yang terjadi?"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/rg_jenis_kejadian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_space_16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_lakalantas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecelakaan Lalu Lintas" />

            <RadioButton
                android:id="@+id/rb_troublespot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trouble Spot" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_versa_keadaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_space_12dp"
        android:background="@drawable/button_square_orange"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_space_12dp"
        android:paddingTop="@dimen/dimen_space_12dp"
        android:text="Dalam Penanganan"
        android:textColor="@android:color/primary_text_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:background="#DBE1E8" />
</LinearLayout>