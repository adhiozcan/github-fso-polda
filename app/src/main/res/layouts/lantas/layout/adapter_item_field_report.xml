<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/dimen_space_2dp"
              android:layout_marginLeft="@dimen/dimen_space_8dp"
              android:layout_marginRight="@dimen/dimen_space_8dp"
              android:layout_marginTop="@dimen/dimen_space_2dp"
              android:background="@drawable/button_square_white"
              android:elevation="@dimen/dimen_space_2dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_space_16dp">

        <ImageView
            android:id="@+id/img_urgensi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dimen_space_16dp"
            android:src="@drawable/logo_polri_transparent_150"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_judul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="@dimen/dimen_space_16dp"
                    android:paddingRight="@dimen/dimen_space_16dp"
                    android:text="Field report fileName"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_space_16dp"
                android:paddingRight="@dimen/dimen_space_16dp"
                android:text="10 Januari 2017"/>

            <TextView
                android:id="@+id/txt_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_space_16dp"
                android:paddingRight="@dimen/dimen_space_16dp"
                android:text="Keterangan"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_space_16dp"
                android:layout_marginTop="@dimen/dimen_space_8dp"
                android:background="@drawable/square_shape_orange"
                android:paddingBottom="@dimen/dimen_space_4dp"
                android:paddingLeft="@dimen/dimen_space_12dp"
                android:paddingRight="@dimen/dimen_space_12dp"
                android:paddingTop="@dimen/dimen_space_4dp"
                android:text="Status : Lapor"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:background="#DBE1E8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_item_bukti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_square_white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_photo_camera_dark"
                android:drawablePadding="@dimen/dimen_space_8dp"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_space_12dp"
                android:paddingTop="@dimen/dimen_space_12dp"
                android:text="Bukti Foto"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_item_lokasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_square_white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_maps_dark"
                android:drawablePadding="@dimen/dimen_space_8dp"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_space_12dp"
                android:paddingTop="@dimen/dimen_space_12dp"
                android:text="Lokasi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_item_lihat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_square_white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_chevron_circle_right_dark"
                android:drawablePadding="@dimen/dimen_space_8dp"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_space_12dp"
                android:paddingTop="@dimen/dimen_space_12dp"
                android:text="Lihat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>