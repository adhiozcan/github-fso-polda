<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_material" />

    <TextView
        android:id="@+id/splash_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/dimen_space_16dp"
        android:paddingRight="@dimen/dimen_space_16dp"
        android:text="Polda Kepri"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/splash_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_text3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/dimen_space_16dp"
        android:paddingRight="@dimen/dimen_space_16dp"
        android:text="Quick Response"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/splash_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:paddingLeft="@dimen/dimen_space_16dp"
        android:paddingRight="@dimen/dimen_space_16dp"
        android:text="Prototype Edition"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_above="@+id/splash_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dimen_space_12dp"
        android:src="@drawable/police_hat_white" />
</RelativeLayout>