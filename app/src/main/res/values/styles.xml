<resources>

    <!-- Base application theme. -->
    <style name="QuickResponseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuickResponseTheme.Transition" parent="@android:style/Animation.Activity">
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <style name="QuickResponseTheme.FullScreen" parent="QuickResponseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>
        <item name="popupTheme">@style/ToolbarTheme.PopUp</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="ToolbarTheme.PopUp" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:textColorPrimary">@color/primary_material_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:popupBackground">@color/background_material_light</item>
    </style>

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>

        <!-- Required for Lollipop. -->
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

</resources>
